{
  "info": {
    "name": "MovieTicketing_Haroon API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection covering accounts, movies, carts, checkout, and ratings."
  },
  "item": [
    {
      "name": "Create Account",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Haroon\",\n  \"lastName\": \"Butt\",\n  \"username\": \"haroon\",\n  \"password\": \"password123\",\n  \"rememberMe\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/accounts",
          "host": ["{{baseUrl}}"],
          "path": ["accounts"]
        }
      },
      "response": []
    },
    {
      "name": "Get Account",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/accounts/1",
          "host": ["{{baseUrl}}"],
          "path": ["accounts", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Create Movie",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Orbit Seven\",\n  \"genre\": \"Science Fiction\",\n  \"typeId\": 3,\n  \"accountId\": 1,\n  \"ticketPrice\": 21.00\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/movies",
          "host": ["{{baseUrl}}"],
          "path": ["movies"]
        }
      },
      "response": []
    },
    {
      "name": "List Movies",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/movies?page=0&size=5",
          "host": ["{{baseUrl}}"],
          "path": ["movies"],
          "query": [
            { "key": "page", "value": "0" },
            { "key": "size", "value": "5" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Update Movie",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Orbit Seven - Director's Cut\",\n  \"typeId\": 3,\n  \"ticketPrice\": 25.50\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/movies/3",
          "host": ["{{baseUrl}}"],
          "path": ["movies", "3"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Movie",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/movies/5",
          "host": ["{{baseUrl}}"],
          "path": ["movies", "5"]
        }
      },
      "response": []
    },
    {
      "name": "Add Cart Item",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"accountId\": 1,\n  \"movieId\": 1,\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/cart",
          "host": ["{{baseUrl}}"],
          "path": ["cart"]
        }
      },
      "response": []
    },
    {
      "name": "Get Account Cart",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/accounts/1/cart",
          "host": ["{{baseUrl}}"],
          "path": ["accounts", "1", "cart"]
        }
      },
      "response": []
    },
    {
      "name": "Checkout",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"accountId\": 1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/checkout",
          "host": ["{{baseUrl}}"],
          "path": ["checkout"]
        }
      },
      "response": []
    },
    {
      "name": "Add Rating",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"accountId\": 1,\n  \"rating\": 5,\n  \"comment\": \"Loved the striking visuals\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/movies/1/ratings",
          "host": ["{{baseUrl}}"],
          "path": ["movies", "1", "ratings"]
        }
      },
      "response": []
    },
    {
      "name": "Get Ratings",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/movies/1/ratings",
          "host": ["{{baseUrl}}"],
          "path": ["movies", "1", "ratings"]
        }
      },
      "response": []
    },
    {
      "name": "Get Transactions",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/accounts/1/transactions",
          "host": ["{{baseUrl}}"],
          "path": ["accounts", "1", "transactions"]
        }
      },
      "response": []
    }
  ]
}
